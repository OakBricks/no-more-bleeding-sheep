{
  "schemaVersion": 1,
  "id": "nmbs",
  "version": "${version}",

  "name": "No More Bleeding Sheep!",
  "description": "\"No More Bleeding Sheep\" is a single-mixin mod that prevents the Evoker from turning blue sheep into red sheep!",
  "authors": [
    "OakBricks"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/nmbs/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.oakbricks.nmbs.NoMoreBleedingSheep"
    ]
  },
  "mixins": [
    "nmbs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  }
}
