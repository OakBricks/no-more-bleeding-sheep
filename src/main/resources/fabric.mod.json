  "authors": [
    "OakBricks"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/nmbs",
    "sources": "https://github.com/OakBricks/no-more-bleeding-sheep"
  },

  "license": "LGPLv3",
  "icon": "assets/nmbs/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.oakbricks.nmbs.NoMoreBleedingSheep"
    ]
  },
  "mixins": [
    "nmbs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.5",
    "minecraft": "1.17.x",
    "java": ">=16"
  }
